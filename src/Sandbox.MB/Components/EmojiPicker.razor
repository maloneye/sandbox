<MudPaper Class=".center-screen z-100">

<MudButton OnClick="@(()=>IsOpen = !IsOpen)">@Content</MudButton>

<MudPopover Open="IsOpen" AnchorOrigin="Origin.CenterCenter" >
    <MudText>Something here</MudText>
    </MudPopover>

</MudPaper>

<style>
    .center-screen {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
    }
</style>

@code {
    private string _content = "🤔";
    [Parameter] public string Content
    {
        get { return _content; }
        set 
        {
            if (value is null || value == "") return;
            _content = value;
        }
    }

    [Parameter] public bool IsOpen { get; set; } = false;


    


}
