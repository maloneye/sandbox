@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" Theme="@MaloneyTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Maloneye</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<style>
/*    .page {
        position: relative;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }*/
</style>
@code {
    bool _drawerOpen = false;
    MudTheme MaloneyTheme = new MudTheme();

    public MainLayout()
    {
        MaloneyTheme.PaletteDark.Primary = Colors.Amber.Default;
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }


}